<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/stats_panel.css" />
	</styles> 
	<scripts>
		<include src="file://{resources}/scripts/custom_game/stats_panel.js" /> 
	</scripts>
	<Panel class="rootPanel">
		<Panel id="rootStatsContainer">
			<Panel class="mainStatsPanel" hittest="false">
				<Panel class="genericHolder" id="endRoundStats">
					<Panel class="statsHolder" id="DTHolder">
						<Label hittest="false" class="statsHeader" id="damageTakenMain" text="Damage taken:"/>
					</Panel>
					<Panel class="statsHolder" id="DDHolder">
						<Label hittest="false" class="statsHeader" id="damageDealtMain" text="Damage dealt:"/>
					</Panel>
					<Panel class="statsHolder" id="DHHolder">
						<Label hittest="false" class="statsHeader" id="damageHealedMain" text="Damage healed:"/>
					</Panel>
				</Panel>
				<Button id="PlayerInfoContainerCloseID" onactivate="ToggleStats()">
					<Image src="file://{images}/custom_game/slideLeft.png" id="CloseImageID" class="CloseImage" hittest="false"/>
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>